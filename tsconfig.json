{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"] //路径提示 路径别名 viteconfig配置的是打包时用的
    },

    // 严格性和类型检查相关配置
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // 模块和兼容性相关配置
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // 调试和兼容性相关配置
    "sourceMap": true,
    "useDefineForClassFields": true,
    "allowJs": true,

    // 类型声明相关配置
    "types": ["node", "vite/client", "element-plus/global"]
  },

  "include": ["mock/**/*.ts", "src/**/*.ts", "src/**/*.d.ts","src/**/*.vue", "vite.config.ts","./auto-imports.d.ts"],
  "exclude": ["node_modules", "dist"]
}
